# Production Environment Variables for Railway Deployment

# Flask Configuration
FLASK_ENV=production
PORT=5000

# API Keys
YOUTUBE_API_KEY=your_youtube_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# OBS Configuration (if using OBS remotely)
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=your_obs_password

# Vultr Server Configuration (if using)
VULTR_API_URL=http://your-vultr-server.com:8000
VULTR_UPLOAD_ENDPOINT=/upload
VULTR_API_KEY=your_vultr_api_key

# Database (if needed in future)
DATABASE_URL=postgresql://user:password@host:port/database

# Security
SECRET_KEY=your_secret_key_for_sessions

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-netlify-app.netlify.app,https://your-domain.com

VITE_API_URL=https://votre-app-railway.up.railway.app
